<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.wavemaker.studio</groupId>
    <artifactId>wavemaker-studio-commons</artifactId>
    <version>8.0.4.1</version>

    <packaging>pom</packaging>

    <modules>
        <module>wavemaker-studio-common-util</module>
    </modules>
    
    <build>
       <pluginManagement>
            <plugins>
                <plugin>
                   <groupId>com.mycila.maven-license-plugin</groupId>
                     <artifactId>maven-license-plugin</artifactId>
                        <version>1.9.0</version>
                        <configuration>
                          <header>${license.header.file}</header>
                            <strictCheck>true</strictCheck>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                            <properties>
                                <year>2015</year>
                                <company>WaveMaker, Inc</company>
                            </properties>
                        </configuration>
                        <executions>
                            <execution>
                                <id>format-license</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>format</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>check-license</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>check</goal>
                                </goals>
                            </execution>
                        </executions>
                </plugin>
            </plugins>
       </pluginManagement>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>autoincrement-versions-maven-plugin</id>
            <name>autoincrement-versions-maven-plugin</name>
            <url>http://autoincrement-versions-maven-plugin.googlecode.com/svn/repo</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

</project>
